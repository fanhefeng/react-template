{
  "name": "vite-react-typescript-tailwind-template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview --port 3000",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --ext .ts --fix src && yarn format",
    "lint-staged": "lint-staged",
    "prepare": "cp ./.env.development ./.env && husky install",
    "test": "mocha",
    "test:coverage": "nyc mocha"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@heroicons/react": "^1.0.5",
    "@tailwindcss/forms": "^0.4.0",
    "@tsconfig/vite-react": "^1.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "16",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@vitejs/plugin-react": "^1.3.0",
    "autoprefixer": "^10.4.0",
    "buffer": "^6.0.3",
    "chai": "^4.3.6",
    "daisyui": "^2.13.6",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-watch": "^8.0.0",
    "ethers": "^5.6.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "react-router-dom": "^6.3.0",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.5.4",
    "util": "^0.12.4",
    "vite": "^2.9.5",
    "vite-plugin-svgr": "^1.1.0",
    "wagmi": "^0.2.26"
  },
  "lint-staged": {
    "*.ts": [
      "eslint",
      "prettier --write"
    ]
  }
}
