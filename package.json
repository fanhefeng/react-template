{
  "name": "vite-react-typescript-tailwind-template",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">16.14.2"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview --port 3000",
    "lint": "eslint . --ext .ts,.tsx,.js --fix --max-warnings 0",
    "format": "prettier --write './'",
    "format-staged": "pretty-quick --staged",
    "postinstall": "husky install && yarn generate-contract-types",
    "test": "cross-env TS_NODE_PROJECT='./tsconfig.test.json' nyc --reporter=lcov mocha",
    "generate-contract-types": "typechain --target ethers-v5 --out-dir ./src/contracts './src/abis/**/*.json'",
    "lighthouse": "lhci autorun --config=lighthouserc.local.json",
    "lighthouse:remote": "lhci autorun"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-spinners": "^0.13.7",
    "typechain": "^8.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@heroicons/react": "^1.0.5",
    "@lhci/cli": "^0.9.0",
    "@tailwindcss/forms": "^0.4.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "16",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@vitejs/plugin-react": "^1.3.0",
    "autoprefixer": "^10.4.0",
    "buffer": "^6.0.3",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "daisyui": "^2.50.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-watch": "^8.0.0",
    "ethers": "^5.6.2",
    "husky": "^7.0.4",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "postcss": "^8.4.5",
    "prettier": "^2.8.1",
    "pretty-quick": "^3.1.3",
    "react-router-dom": "^6.3.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.5.4",
    "util": "^0.12.4",
    "vite": "^4.0.0",
    "vite-plugin-svgr": "^1.1.0",
    "wagmi": "^0.2.26"
  },
  "nyc": {
    "exclude": [
      "test/**",
      "src/contracts/**",
      "**/node_modules/**"
    ]
  }
}
